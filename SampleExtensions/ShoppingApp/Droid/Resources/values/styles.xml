<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="ShoppingAppTheme" parent="ShoppingAppTheme.Base">
  </style>
  <style name="ShoppingAppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlNormal">@color/window_background</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:colorBackground">@color/window_background</item>
  </style>
  <style name="ShoppingAppTheme.Splash" parent="android:Theme">
    <item name="android:windowBackground">
      @drawable/splash
    </item>
    <item name="android:colorBackground">#FFFFFF</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsTranslucent">false</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
</resources>